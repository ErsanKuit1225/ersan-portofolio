{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist/mjs"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.spec.js"]
}
